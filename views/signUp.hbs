        <!--Log In Form-->
        <section class="logInBg pt-5 pb-5">
            <div class="container pt-3">
                
                <div class="d-flex justify-content-center align-items-center row mt-5">
                    <div class="d-none d-sm-none d-md-none d-lg-block d-xl-block col-lg-5 col-xl-5 whiteText overflowHidden">
                        <div class="mr-1 animate__animated animate__fadeInLeft">
                            <img class="img-fluid" src="./img/signUp.svg">
                        </div>
                    </div>
        
                    <div class="col-10 col-sm-10 col-md-7 col-lg-5 col-xl-4">

                        <form action="/auth/register" method="POST" class="form-signin whiteText animate__animated animate__fadeInRight">
                            <div class="text-center">
                                <img class="mb-3 img-fluid" src="./img/logoWhite.png" alt="" width="80">
                            </div>
                            <h4 class="mb-3 text-center d-sm-block d-md-block d-lg-none d-xl-none col-lg-6 col-xl-6">Welcome! sign up.</h4>
                            <p class="text-center"><small>Already a user? <a href="#">Login here</a></small></p>
        
                            <label for="inputName" class="sr-only">Name</label>
                            <input name="name"  type="text" id="inputName" class="form-control mb-2" placeholder="Name" required="" autofocus="">

                            <label for="inputSurmame" class="sr-only">Surname</label>
                            <input name="surname" type="text" id="inputSurmame" class="form-control mb-2" placeholder="Surname" required="" autofocus="">

                            <label for="inputCompanyName" class="sr-only"">Company Name</label>
                            <input name="company_name" type="text" class="form-control mb-2" id="inputCompanyName" placeholder="Company Name" required="">
        
                            <label for="inputEmail" class="sr-only">Email</label>
                            <input name="email" type="email" id="inputEmail" class="form-control mb-2" placeholder="Email" required="">

                            <small  id="emailhint" class="form-text lead">You represent a...</small>
                            <label for="inputState" class="sr-only" >State</label>
                            <select name="custom_claim" id="inputState" class="form-control mt-1 mb-3" required="">
                                <option selected>Choose...</option>
                                <option>Non-Profit Organisation</option>
                                <option>Coperate Social Investor/Sponsor</option>
                            </select>

                            <label for="inputPassword" class="sr-only">Email</label>
                            <input name="password" type="password" id="inputPassword" class="form-control mb-2" placeholder="Password" required="">

                            <label for="repeatPassword" class="sr-only">Email</label>
                            <input name="passwordConfirm" type="password" id="inputPassword" class="form-control mb-2" placeholder="Password" required="">
        
                            <div class="checkbox mb-3 d-flex">
                              <label class="align-self-start">
                                <input class="inputText" type="checkbox" value="remember-me" required=""> <small>I accept the <a href="./termsAndConditions.html">Terms & Conditions</a> of Indlela Media.</small>
                              </label>
                            </div>
                            <button class="btn btn-primary" type="submit">Sign Up</button>

                            {{#if message}}
                                <h6 class="alert alert-danger mt-3">{{message}}</h6>
                            {{/if}}
                        </form>
                    </div>
        
                </div>
            </div>
        </section>    

